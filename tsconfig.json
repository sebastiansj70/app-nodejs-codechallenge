{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist"
    },
    "include": [
        "apps/**/*",
        "apps/transactions/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}