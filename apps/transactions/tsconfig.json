{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": ["jest", "node"] 
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
}
